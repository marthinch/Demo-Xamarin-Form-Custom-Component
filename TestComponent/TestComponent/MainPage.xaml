<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TestComponent.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <StackLayout>

            <Label
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Demo components" />

            <Button
                x:Name="ButtonEntryComponent"
                Clicked="ButtonEntryComponent_Clicked"
                Text="Entry Component" />

            <Button
                x:Name="ButtonSwitchComponent"
                Clicked="ButtonSwitchComponent_Clicked"
                Text="Switch Component" />

            <Button
                x:Name="ButtonDefaultEmptyPage"
                Clicked="ButtonDefaultEmptyPage_Clicked"
                Text="Default Empty State Page" />

            <Button
                x:Name="ButtonCustomEmptyPage"
                Clicked="ButtonCustomEmptyPage_Clicked"
                Text="Custom Empty State Page" />

        </StackLayout>
    </ScrollView>

</ContentPage>
